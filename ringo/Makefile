PARALLEL = ParallelJoinTest ParallelSelectTest

par: $(PARALLEL)

ParallelJoinTest: ParallelJoinTest.cpp $(CSNAP)/Snap.o
	$(CC) $(CXXFLAGS) -o $@ $@.cpp $(CSNAP)/Snap.o -I$(CSNAP) -I$(CGLIB) $(LDFLAGS) $(LIBS)

